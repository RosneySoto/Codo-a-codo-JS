<!DOCTYPE html>
<html lang="en">

<head>
    {{> head}}
</head>

<body id="backend">
    <h1 style="text-align: center; background-color: rgb(123, 188, 222); padding-top: 10px; padding-bottom: 20px;">Editando: {{productos.nombre}}</h1>
    <div class="container mb-4">
        <!-- Start Top Header Bar -->
        {{> header}}

        <div class="agregar-producto mt-4">
            {{#if mensaje}}
                <p>{{mensaje}}
            {{/if}}
            <form action="/editar-producto/{{productos.idProducto}}" method="post">
                <div class="row">
                    <div class=" col-md-6 col-lg-4">
                        <div class="row">
                            <div class="mb-3  col-md-5">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="nombre" value="{{productos.nombre}}"
                                    name="nombre" required>
                            </div>


                            <div class="mb-3 col-md-3">
                                <label for="precio" class="form-label">Precio (u$s)</label>
                                <input type="text" class="form-control" id="precio" value="{{productos.precio}}"
                                    name="precio" required>
                            </div>

                            <div class="mb-3 col-md-3">
                                <label for="stock" class="form-label">Stock</label>
                                <input type="number" class="form-control" id="stock" name="stock" value="{{productos.stock}}" required>
                            </div>

                            <div class="mb-3 col-md-3">
                                <label for="destacado" class="form-label">Destacado</label>
                                {{#if productos.destacado}}
                                <input type="checkbox" class="form-check-input" id="destacado" name="destacado" value="1" checked>
                                {{else}}
                                <input type="checkbox" class="form-check-input" id="destacado" name="destacado" value="1">
                                {{/if}}
                            </div>
                        </div>


                        <!--  <div class="col-12" id="">
                            <label for="imagenDeProducto" class="form-label btn btn-primary">Subir imagen</label>
                            <div class="preview">
                                <p>No hay imagen seleccionada para subir</p>
                            </div>
                            <input class="form-control" type="file" id="imagenDeProducto" name="imagenDeProducto"
                                accept=".png,.jpg,.jpeg" required>
                        </div> -->

                        <div class="col-12" id="">
                            <label for="rutaImagen" class="form-label">URL imagen</label>
                            <input class="form-control" type="text" id="rutaImagen" name="rutaImagen" value="{{productos.rutaImagen}}" required>
                        </div>




                    </div>
                    <div class="col-12 col-md-6 col-lg-8">
                        <div class="row">
                            <div class="mb-3 col-8">
                                <label for="descripcion" class="form-label">Descripcion</label>
                                <textarea class="form-control" id="descripcion" rows="6" name="descripcion">{{productos.descripcion}}</textarea>
                            </div>
                            <div class="mb-3 col-4">
                                <label for="caracteristicas" class="form-label">Caracteristicas</label>
                                <textarea class="form-control" id="caracteristicas" rows="6" name="caracteristica">{{productos.caracteristica}}</textarea>
                            </div>
                        </div>
                    </div>

                </div>



                <button type="submit" class="btn btn-info mt-3">Guardar</button>
                <a href="/admin" class="btn btn-info mt-3">Volver al listado de productos</a>
            </form>
        </div>
    </div>

    {{> footer}}

    <!-- 
    Essential Scripts
    =====================================-->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


    <script>
        // https://developer.mozilla.org/en-US/docs/Web/API/File/Using_files_from_web_applications
        const contenedor = document.querySelector("#imagenCargada"),
            elInput = document.querySelector("#imagenDeProducto");

        contenedor.addEventListener("click", function (e) {
            if (elInput) {
                elInput.click();
                document.querySelector("#imagenCargada img").style.display = "none";
                elInput.style.display = "block"
                contenedor.classList.remove("editar")
            }
        }, false);
    </script>
</body>

</html>